<odoo>

  <record id = "department_view_tree" model = "ir.ui.view">
  	<field name = "name">department tree</field>
  	<field name = "model">department</field>
  	<field name = "arch" type = "xml">
  		<tree multi_edit="1">
  			<field name = "name"/>
  			<field name = "code"/>
        <field name = "college_id"/>
  		</tree>
    </field>
  </record>	

  <record id = "department_view_form" model = "ir.ui.view">
    <field name = "name">department form</field>
    <field name = "model">department</field>
    <field name = "arch" type = "xml">
      <form>
        <sheet>
            <group>
                <field name = "name"/>
                <field name = "code"/>
                <field name = "college_id"/>
            </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id = "department_action" model = "ir.actions.act_window">
    <field name = "name">Department</field>
    <field name = "res_model">department</field>
  </record> 
 
  <menuitem
  id = "department_menu"
  name = "Departments"
  parent = "colleges_menu"
  action = "department_action"
  sequence="2"
  />  

</odoo>